{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/Legends.sln",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary;ForceNoAlign"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/Legends.sln",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary;ForceNoAlign"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/Legends.sln"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "build content",
            "command": "dotnet",
            "type": "process",
            "args": [
                "mgcb",
                "./content.mgcb",
                "/clean",
                "/launchdebugger"
            ],
            "options": {
                "cwd": "${workspaceFolder}/src/cs/Legends.App/Content"
            }
        }
    ]
}